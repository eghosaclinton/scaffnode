{
  "name": "scaffnode",
  "version": "0.1.6",
  "description": "Quick-start CLI for Node.js web frameworks",
  "type": "commonjs",
  "main": "dist/bin/index.js",
  "bin": {
    "scaffnode": "dist/bin/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eghosaclinton/scaffnode"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "ts-node src/bin/index.ts",
    "build": "tsc --build",
    "format": "prettier --write 'src/**/*.{js,ts,jsx,tsx,json,css,md}'",
    "start": "node dist/bin/index.js",
    "prepare": "husky",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "release:patch": "pnpm version patch && git push --follow-tags",
    "release:minor": "pnpm version minor && git push --follow-tags",
    "release:major": "pnpm version major && git push --follow-tags"
  },
  "keywords": [
    "cli",
    "bootstrap",
    "node",
    "backend"
  ],
  "author": "a1s0sa",
  "license": "ISC",
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/prompts": "^2.4.9",
    "eslint": "^9.35.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.9.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "degit": "^2.8.4",
    "prompts": "^2.4.2",
    "update-check": "^1.5.4"
  }
}
